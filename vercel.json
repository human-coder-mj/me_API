{
  "version": 2,
  "builds": [
    {
      "src": "me_API/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles_build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "me_API/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "me_API.settings",
    "PYTHONPATH": ".",
    "DATABASE_URL": "@database_url"
  },
  "functions": {
    "me_API/wsgi.py": {
      "maxDuration": 30
    }
  }
}
